
@{

    var items = (List<ProductModel>)ViewData["products"];
    var color = ViewData["Color"];
    Layout = "_LayoutWeb";
}


<h1>مكتبة نوره</h1>
<table class="table" style="background-color:@color">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in items)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td><img style="width:200px; height:200px" src="@item.Image" alt="@item.Image" /></td>
                <td> <a href="/Products/Details/@item.Id"> <button type="button" class="btn btn-danger"> أظهر </button></a></td>
            </tr>
        }
    </tbody>
</table>
